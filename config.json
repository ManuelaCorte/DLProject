{
  "dataset_path": "../data/raw/refcocog/",
  "epochs": 60,

  "model": {
    "clip_embed_dim": 1024,
    "clip_ctx_length": 77,
    "img_size": 224,

    "mlp_hidden_dim": 128,
    "proj_img_size": 14,
    
    "embed_dim": 512,
    "decoder_layers": 3,
    "decoder_heads": 8,
    "decoder_dim_feedforward": 2048
  },

  "train": {
    "batch_size": 128,
    "lr": 1e-4,
    "lr_backbone": 1e-5,
    "step_size": 20,
    "l1": 5.0,
    "l2": 2.0,
    "sweep": true
  },
  "logging": {
    "path": "../runs/",
    "save": true,
    "resume": false,
    "wandb": true
  }
}
