{
  "dataset_path": "../data/raw/refcocog/",
  "epochs": 70,

  "model": {
    "clip_embed_dim": 1024,
    "clip_ctx_length": 77,
    "img_size": 224,

    "mlp_hidden_dim": 128,
    "activation": "sigmoid",
    "proj_img_size": 14,

    "embed_dim": 512,
    "decoder_layers": 3,
    "decoder_heads": 8,
    "decoder_dim_feedforward": 2048
  },

  "train": {
    "batch_size": 64,
    "lr": 5e-5,
    "lr_backbone": 1e-5,
    "step_size": 25,
    "l1": 4.0,
    "l2": 1.5,
    "weight_decay": 1e-4
    "sweep": true
  },
  "logging": {
    "path": "../runs/",
    "save": true,
    "resume": false,
    "wandb": true
  }
}
